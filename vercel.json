{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/index.js"
        },
        {
            "source": "/admin",
            "destination": "public/admin/index.html"
        },
        {
            "source": "/exam",
            "destination": "public/exam.html"
        },
        {
            "source": "/",
            "destination": "public/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "public/$1"
        }
    ]
}